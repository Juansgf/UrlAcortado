<main role="main" class="container">
  <div class="row">
    <div style="padding-bottom: 2cm;" class="col-12">
      <h1 style="text-align: center;">URL</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <form class="form-inline" action="/" method="POST">
        <div class="input-group w-100">
          <input type="text" name="urlInicial" placeholder="Normal URL" class="form-control" id="getUrl">
        </div>
        <br>
      </form>
        <br>
      <div style="text-align:center;"><buton type="button" class="btn btn-dark" value="Add"  onclick="guardarURL()">Shorten</buton></div>

    </div>
  </div>

  <div class="row">
    <div style="padding-top:2rem;" class="col-lg-12">
      {{#each allUrls}}
 
      <table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Shortened:</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">1</th>
      <td><a href={{nuevo}}>{{nuevo}}</a></td>
    </tr>

  </tbody>
</table>
      {{/each}}
    </div>
  </div>
</main>